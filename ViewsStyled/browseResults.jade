//extends layoutLoggedIn 
include mixins

doctype
html
	head
		link(href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.0/flatly/bootstrap.min.css", rel="stylesheet")

	body
		.container
		
		script( src='//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js' )
		script( src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js' )
		
	nav.navbar.navbar-default( role="navigation" )
		.navbar-header
			button.navbar-toggle.collapsed( type="button", data-toggle="collapse", data-target="#navbar-inverse", aria-expanded="false", aria-controls="navbar")
				span.sr-only Toggle navigation
				span.icon-bar
				span.icon-bar
				span.icon-bar
			a.navbar-brand BROWSE
	
		#navbar-inverse.collapse.navbar-collapse
			ul.nav.navbar-nav
				//li.active: a( href="#about") Title
				li: a( href="/browse/byTitle" ) Title
				li: a( href="/browse/byAuthor" ) Author
				li.dropdown
					a.dropdown-toggle( href="#", data-toggle="dropdown", role="button", aria-expanded="false" ) Publication Date 
						span.caret
					ul.dropdown-menu( role="menu" )
						li: a( href="/browse/byPublicationDate/Newest" ) Newest
						li: a( href="/browse/byPublicationDate/Oldest" ) Oldest
				li.dropdown
					a.dropdown-toggle( href="#", data-toggle="dropdown", role="button", aria-expanded="false" ) Genre
						span.caret
					ul.dropdown-menu( role="menu" )
						li: a( href="/browse/byGenre/humor" ) Humor
						li: a( href="/browse/byGenre/action_adventure" ) Action/Adventure
						li: a( href="/browse/byGenre/superhero" ) Superhero
						li: a( href="/browse/byGenre/zombies" ) Zombies
						li: a( href="/browse/byGenre/post_apocalyptic" ) Post Apocalyptic
block script
	script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js")
	script.
		
block content
	div(id="form")
		h1.
			Search Results
			
	div(id="search-results-container")
		div(class="search-results")
			- for (var i = 0; i < Comics.length; i++)
				div(class="divider")
				br
				div(class="comic-info-container")
					|Title: #{Comics[i].title}
					br
					|Author: #{Comics[i].authorUsername}
					br
					|Description: #{Comics[i].description}
					br
					|Genre: #{Comics[i].genre}
					br
					-if(!Comics[i].toPublish)
						|unpublished
					-else
						|published
					br
				div(class="thumbnail-container")
					a(href="http://#{header}id/#{Comics[i]._id}")
						img(id="thumbnails", src="http://#{header}image/#{ComicCells[i]._id}")
				br		