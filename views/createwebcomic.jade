extends layoutloggedIn 

block content
    h1.
        New Comic!
    div
        form#formCreateWebComic(name="createWebComic", method="post", action="/webcomic/create")
            input#comicTitle(type="text", placeholder="Title",name="title")
            br
            input#description(type="text", placeholder="description",name="description")
            br
            input#genre(type="text", placeholder="genre", name="genre")
            br
            | Publish now?
            input#toPublish(type="checkbox", name="toPublish", value="toPublish")
            br
            input#firstImage(type="file",name="firstImage")
            br
            button#btnSubmit(type="submit") submit



